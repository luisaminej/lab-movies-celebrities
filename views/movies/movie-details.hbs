<h2>Movie Detail</h2>

<h3>Title:{{movie.name}}</h3>
<h4>Genre:{{movie.genre}}</h4>
<h5>Plot:{{movie.plot}}</h5>
<h5>Cast:</h5>
{{#each movie.cast}}
    <h6>Name:{{this.name}}</h6>
    <h6>Occupation{{this.occupation}}</h6>
    <h6>Catch Phrase{{this.catchPhrase}}</h6>
{{/each}}

<a href="/movies/{{_id}}/edit">Edit</a
<form action="/movies/{{movie._id}}/delete" method="POST">
    <button type="submit">Delete</button>
</form> 