<h2>New Movie</h2>

<form action="/movies/create" method="POST">
 <label> Title:
    <input type="text" name="title"  placeholder="Title"/>
  </label>
  <label> Genre:
    <input type="text" name="genre"  placeholder="Genre" />
  </label>
  <label> Plot:
    <input type="text" name="plot"  placeholder="Plot"> </input>
  </label>
  <label> Cast:
  </label>
 <select multiple name="cast">
        {{#each movies}}
            <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
    </select>
    <br>

   <button type="submit"> Creat Movie </button>
</form>